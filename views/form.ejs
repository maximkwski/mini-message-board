<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>New Message</title>
    <link rel="stylesheet" href="/styles.css" />
  </head>
  <body>
    <div class="container">
      <h1>New Message</h1>

      <form action="/new" method="POST" class="form-container">
        <div class="form-group">
          <label for="user">Your Name:</label>
          <input type="text" id="user" name="user" required />
        </div>

        <div class="form-group">
          <label for="message">Your Message:</label>
          <textarea
            id="message"
            name="message"
            placeholder="What's on your mind?"
            required
          ></textarea>
          <small style="color: #888; font-size: 0.8rem"
            >Press Enter to send, Shift+Enter for new line</small
          >
        </div>

        <button type="submit" class="submit-btn">Send Message</button>
      </form>

      <div style="text-align: center; margin-top: 1rem">
        <a href="/" class="back-btn">‚Üê Back to Messages</a>
      </div>
    </div>

    <%- include('footer') %>
  </body>

  <script>
    //to submit form from message textarea with enter btn
    document
      .getElementById("message")
      .addEventListener("keydown", function (e) {
        if (e.key === "Enter" && !e.shiftKey) {
          e.preventDefault();
          document.querySelector("form").submit();
        }
      });

    document.addEventListener("keydown", function (e) {
      if (e.key === "Enter" && e.target.tagName === "INPUT") {
        e.preventDefault();
        document.querySelector("form").submit();
      }
    });
  </script>
</html>
